<!DOCTYPE html>
<html>
<head>
  <title>ReminderEmailer</title>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-38149291-2']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "screen" %>
  <%= javascript_include_tag "application" %>
</head>
<body>
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="#">Reminder Emailer</a>
        <% if user_signed_in? %>
        <ul class="nav">
          <li><%= link_to "Reminders", reminders_path %></li>
          <li><%= link_to "Groups", groups_path %></li>
          <li><%= link_to "Plugins", plugin_descriptors_path %></li>
          <li><%= link_to "Change Password", edit_password_path(resource_name)  %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path %></li>
        </ul>
        <% end %>
      </div>
    </div>
  <%= yield %>
  </div>
</body>
</html>
